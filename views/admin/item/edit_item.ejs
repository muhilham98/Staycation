<div class="tab-pane fade show active" id="edit-item" role="tabpanel" aria-labelledby="profile-tab">

    <div class="card shadow mb-4 mt-2">
        <div class="card-body">
            <form action="/admin/item/<%= item._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name">Title</label>
                    <input name="title" value="<%= item.title %>" type="text" class="form-control" placeholder=" Enter Title" required>
                </div>
                <div class="form-group">
                    <label for="name">Price</label>
                    <input name="price" value="<%= item.price %>" type="number" class="form-control" placeholder=" Enter Price" required>
                </div>
                <div class="form-group">
                    <label for="name">City</label>
                    <input name="city" value="<%= item.city %>" type="text" class="form-control"  placeholder=" Enter City" required>
                </div>
                <div class="form-group">
                    <label for="name">Category</label>
                    <select class="form-control" name="categoryId">
                        <option value="<%= item.categoryId._id %>"><%= item.categoryId.name %></option>
                        <% for(let i = 0; i<category.length; i++){ %>
                        <option value="<%= category[i].id %>"><%= category[i].name %></option>
                        <% } %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="name">Image</label>
                    <input name="image" type="file" class="form-control"  multiple>
                </div>
                <div class="form-group">
                    <label for="name">Description</label>
                    <textarea id="about" name="about" class="form-control"><%= item.description %></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
    </div>


</div>